---
import TildeVerde from "./TildeVerde.astro";
import TildeGris from "./TildeGris.astro";

const {
  clases,
  descripcion,
  precioSinDesc,
  precioConDesc,
  plan,
  objetivos,
  tildeOpcionalUno,
  tildeOpcionalDos,
  mensaje
} = Astro.props;

---

<div
  class="flex
  flex-col
  p-1
  mx-auto
  max-w-[250px]
  text-center
  text-white
  rounded-lg
  border
  shadow
  border-gray-600
  bg-gray-800
  min-[320px]:max-w-[280px]
  min-[320px]:p-2
  min-[414px]:max-w-[380px]
  min-[414px]:p-3
  sm:max-w-[400px]
  sm:p-4
  md:p-1
  md:mx-1
  lg:max-w-[400px]
  lg:p-5"
>
  <h3 class="mb-4 text-2xl font-semibold">{clases}</h3>
  <p class="font-normal text-gray-400 sm:text-lg">
    {descripcion}
  </p>
  <div class="flex justify-center items-baseline my-8">
    <span class="text-gray-400 mr-2 text-1xl font-bold line-through"
      >${precioSinDesc}</span
    >
    <span class="mr-2 text-2xl font-bold">${precioConDesc}</span>
    <span class="text-gray-400 text-sm">/{plan}</span>
  </div>
  <!-- List -->
  <ul role="list" class="flex flex-col flex-grow mb-8 space-y-4 text-left">
    <li class="flex items-center space-x-3">
      <TildeVerde />
      <span>Clase individual de 60 min</span>
    </li>
    <li class="flex items-center space-x-3">
      <TildeVerde />
      <span>Cello disponible para el alumno</span>
    </li>
    <li class="flex items-center space-x-3">
      <TildeVerde />
      <span>{objetivos}</span>
    </li>
    <li class="flex items-center space-x-3">
      {tildeOpcionalUno === true ? <TildeVerde /> : <TildeGris />}
      <span>Seguimiento 12h/7d por WhatsApp</span>
    </li>
    <li class="flex items-center space-x-3">
      {tildeOpcionalDos === true ? <TildeVerde /> : <TildeGris />}
      <span
        >Acceso a contenido
        <span
          class="bg-yellow-200 text-yellow-900 text-xs font-medium me-2 px-2.5 py-0.5 rounded"
          >Exclusivo</span
        > en la web</span
      >
    </li>
  </ul>
  <a  
    href= {mensaje}
    class="text-black bg-gray-300 hover:bg-gray-900 hover:text-white font-medium rounded-lg text-sm px-5 py-2.5 text-center"
    target="_blank"
  >+info por WhatsApp</a>
</div>

<script>
  
</script>
